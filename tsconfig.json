{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "./typescript-kata/dist",
    "rootDir": "./typescript-kata",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["typescript-kata/**/*"],
  "exclude": ["node_modules", "typescript-kata/dist"]
}
